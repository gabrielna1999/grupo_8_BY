       <section id="info">

            <article>

                <div id="prod_name"><%= producto.nombre %></div>
                <div id="prod_precio">$<%= producto.precio %></div>
                

            </article>

            <article  id="select_talle">

                <div class="elegir_talle">
                    <div id="talles">TALLES:</div><br>
                    <% producto.talles.forEach(talle => { %>
                        <div class="talles"><%= talle.id %></div>
