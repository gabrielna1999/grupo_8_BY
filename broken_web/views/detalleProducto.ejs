            </article>

            <article id="descripcion">

                <div id="descrip_titulo">DESCRIPCIÃ“N</div>
                <div id="descrip_content"><%= producto.descripcion %></div>
            </article>

            
            <% if(admin == true){ %>
                <a href="/product/edicionProductos/<%=producto.id%>"><button class="edit-prod" >EDITAR</button></a>
                <form action="/product/borrar/<%=producto.id%>" method="POST">
                    <button type= "submit" edit-prod">BORRAR</button>
                </form>
            <% } %>

        </section>

    </main>

