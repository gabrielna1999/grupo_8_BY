<!DOCTYPE html>
<html>
  <head>
    <title>Broken Youth | Vista de Producto</title>    
    <%- include('./partials/head.ejs')%>
    <link rel='stylesheet' href='/stylesheets/vistaProductos.css' />


  </head>

  <body>
    <%- include('./partials/header.ejs')%>

    <section class="vista">
      
      <% for (let i = 0; i < productos.length; i++){ %>
      <div class="producto">
        <a href="/product/detalleProducto/<%= productos[i].id %>">
          <img id = "imagen" src="/images/producto/<%= productos[i].imagen_ruta %>">
        </a>
        <section id="info">  
          <div id="nombreproduc"><%= productos[i].nombre %></div>
          <div id="precioproduc">$<%= productos[i].precio %></div>
        </section>
      </div>
      <% } %>

    </section>

    <% if(admin == true){ %>
      <a style="align-self: center; justify-self: center; margin: 20px;" href="/product/cargarProducto"><button class="edit-prod" style="font-size: 15px; font-weight: bold;">AGREGAR PRODUCTO</button></a></a>
    <% } %>

    <%- include("./partials/footer") %>

  </body>





</html>
